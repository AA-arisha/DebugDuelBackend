// -------------------
// Datasource
// -------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -------------------
// ENUMS
// -------------------
enum Role {
  ADMIN
  PARTICIPANT
}

enum RoundStatus {
  LOCKED
  UNLOCKED
  ACTIVE
  COMPLETED
}

enum EmailStatus {
  SENT
  FAILED
}

// -------------------
// USERS (Admins & Participants)
// -------------------
model User {
  id        BigInt   @id @default(autoincrement())
  username  String   @unique        // For admin: username, for participant: teamName
  email     String?                   // For admins or team leaders
  password  String
  role      Role
  createdAt DateTime @default(now())

  // Relations (for participants)
  submissions  Submission[]          @relation("UserSubmissions")
  leaderboards Leaderboard[]         @relation("UserLeaderboards")
  emailLogs    EmailLog[]            @relation("UserEmailLogs")
}

// -------------------
// ROUNDS
// -------------------
model Round {
  id        BigInt      @id @default(autoincrement())
  level     Int
  status    RoundStatus
  startsAt  DateTime?
  duration  Int          // in seconds
  createdAt DateTime     @default(now())

  questions   Question[]
  submissions Submission[]
  leaderboards Leaderboard[]
}

// -------------------
// QUESTIONS
// -------------------
model Question {
  id               BigInt      @id @default(autoincrement())
  roundId          BigInt
  title            String
  problemStatement String
  createdAt        DateTime    @default(now())

  round       Round        @relation(fields: [roundId], references: [id])
  testCases   TestCase[]
  buggyCodes  BuggyCode[]
  submissions Submission[]
}

// -------------------
// TEST CASES
// -------------------
model TestCase {
  id             BigInt   @id @default(autoincrement())
  questionId     BigInt
  input          String
  expectedOutput String
  isHidden       Boolean  @default(false)

  question Question @relation(fields: [questionId], references: [id])
}

// -------------------
// BUGGY CODES
// -------------------
model BuggyCode {
  id         BigInt   @id @default(autoincrement())
  questionId BigInt
  language   String
  code       String

  question Question @relation(fields: [questionId], references: [id])
}

// -------------------
// SUBMISSIONS
// -------------------
model Submission {
  id               BigInt   @id @default(autoincrement())
  userId           BigInt
  roundId          BigInt
  questionId       BigInt
  language         String
  code             String
  score            Int
  submittedAt      DateTime @default(now())
  timeTakenSeconds Int
  isCorrect        Boolean

  user     User     @relation("UserSubmissions", fields: [userId], references: [id])
  round    Round    @relation(fields: [roundId], references: [id])
  question Question @relation(fields: [questionId], references: [id])
}

// -------------------
// LEADERBOARD
// -------------------
model Leaderboard {
  id          BigInt @id @default(autoincrement())
  roundId     BigInt
  userId      BigInt
  score       Int    @default(0)
  timePenalty Int    @default(0)
  rank        Int?

  round Round @relation(fields: [roundId], references: [id])
  user  User  @relation("UserLeaderboards", fields: [userId], references: [id])

  @@unique([roundId, userId])
}

// -------------------
// EMAIL LOGS
// -------------------
model EmailLog {
  id          BigInt      @id @default(autoincrement())
  userId      BigInt
  email       String
  status      EmailStatus
  errorMessage String?
  sentAt      DateTime    @default(now())

  user User @relation("UserEmailLogs", fields: [userId], references: [id])
}
